extends layouts/main
include mixins/reviewBlock

//- event쪽 응용하기
block content
    //- #reviewTop
    //-     .container
    //-         .reviewTop
    //-             h1 후기
    //-             p 여러분의 소중한 후기를 남겨주세요!!
    //-             if loggedUser
    //-                 a(href=`reviews${routes.upload}`)
    //-                     button 후기 쓰기
    // contain main informative part of the site
    main#main
        // main-banner of the page
        section.banner.wow.fadeInUp(data-wow-delay='0.4s', style='background-image: url(/resources/images/reviewBG.jpg);')
            span.sale-percent Best of best
            .container
                .row
                    .col-xs-12
                        .caption
                            h1.main-heading Review
                            ul.list-unstyled.breadcrumbs
                                li
                                    if loggedUser
                                        a(href=`reviews${routes.upload}`, style='font-size: 25px;') 리뷰 작성
                                li Write
            span.year TRENDS FOR 2020
    #reviewList
        .container
            //- h2 Review List
            .reviewList
                each item in reviews
                    +reviewBlock({
                        id: item.id,
                        title: item.title,
                        views: item.views,
                        description: item.description,
                        creator: item.creator.name,
                        createdAt: item.createdAt,
                        imageFile: item.fileUrl       
                    })
            